<div class="container-fluid">
  <div class="row">
    <div class="text-center">
        <h1>To Add a Missing Book: </h1>
    </div>
    <%= form_for @booklistsuggestion, url: addtobooklist_update_path do |f| %>
      <div class="col-md-2 col-md-offset-1">
        <%= f.text_field :gwid, :class => 'form-control', placeholder: '4-digit course number' %>
      </div>
      <div class="col-md-2">
        <%= f.text_field :section, :class => 'form-control', placeholder: '2-Digit Section' %>
      </div>
      <div class="col-md-2">
        <%= f.text_field :crn, :class => 'form-control', placeholder: 'Optional CRN' %>
      </div>
      <div class="col-md-3">
        <%= f.text_field :isbn, :class => 'form-control', placeholder: "ISBN" %>
      </div>
      <div class="col-md-1 text-center">
        <%= f.submit "Submit ISBN", :class => "btn btn-success" %>
      </div>
    <% end %>
  </div>
  <div class="row text-center col-md-6 col-md-offset-3">
    <h1>All Other Feedback</h1>
    <%= form_for @feedback, url: feedback_update_path do |f| %>
    <div class="row text-center">
      <div class="col-md-4">
        <%= f.text_field :gwid, :class => 'form-control', placeholder: '4-digit course number' %>
      </div>
      <div class="col-md-4">
        <%= f.text_field :section, :class => 'form-control', placeholder: '2-Digit Section' %>
      </div>
      <div class="col-md-4">
        <%= f.text_field :crn, :class => 'form-control', placeholder: 'Optional CRN' %>
      </div>
    </div>
    <div class="row col-md-12">
      Message: <br>
      <%= f.text_area :comment, :class => 'form-control', size:'30x10', placeholder: 'Spill your heart out'%>
    </div>
    <div class="row col-md-12 text-center">
      <%= f.submit "Send Message", :class => "btn btn-success" %>
    </div>
    <% end %>
  </div>
</div>
