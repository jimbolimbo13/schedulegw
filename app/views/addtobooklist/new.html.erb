<div class="row text-center">
  <h1 id="title">Add a Book</h1>
</div>
<div class="row">
  <%= form_for @booklistsuggestion, url: addtobooklist_update_path do |f| %>
    <div class="col-md-2 col-md-offset-2">
      <%= f.text_field :gwid, :class => 'form-control', placeholder: '4-digit course number' %>
    </div>
    <div class="col-md-2">
      <%= f.text_field :section, :class => 'form-control', placeholder: '2-Digit Section' %>
    </div>
    <div class="col-md-2">
      <%= f.text_field :crn, :class => 'form-control', placeholder: 'Optional CRN' %>
    </div>
    <div class="col-md-3">
      <%= f.text_field :isbn, :class => 'form-control', placeholder: "ISBN" %>
    </div>
    <div class="col-md-1 text-center">
      <%= f.submit "Submit", :class => "btn btn-success" %>
    </div>
  <% end %>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div id="current_isbn_list_div"></div>
  </div>
</div>

<div class="row text-center">
  This will be added as a suggestion and probably accepted within a few minutes. If it isn't, email gmnelson@law.gwu.edu.
</div>
